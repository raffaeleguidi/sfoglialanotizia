#!/usr/bin/env node

var jsonfile = require('jsonfile')
var feeds = require('../lib/feeds');
var every = require('schedule').every;

feeds.init();

function refresh(){
    feeds.refresh(function(articles, corpus){
        console.log(new Date(), "refresh loaded", articles.length, "articles");
    })
}

refresh();

const schedule = process.env.EVERY || "5m";

console.log(new Date(), "scheduling refresh every", schedule);

every(schedule).do(function() {
    refresh();
});

