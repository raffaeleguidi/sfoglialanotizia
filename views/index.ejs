<!DOCTYPE html>
<html lang="it">
<head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Libre+Franklin:wght@400;500;600;700&family=Playfair+Display:ital,wght@0,700;0,900;1,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <script src="https://cdn.tailwindcss.com"></script>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha256-k2WSCIexGzOj3Euiig+TlR8gA0EmPjuc79OEeY5L45g=" crossorigin="anonymous"></script>

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        serif: ['"Playfair Display"', 'serif'],
                        sans: ['"Libre Franklin"', 'sans-serif'],
                    },
                    colors: {
                        'paper-bg': '#f9f9f9',
                        'news-black': '#111111',
                        'accent-red': '#cc0000',
                        'bias-sx': '#d32f2f',
                        'bias-dx': '#1565c0',
                        'bias-cx': '#2e7d32',
                        'bias-ind': '#7b1fa2',
                        'bias-default': '#666666'
                    }
                }
            }
        }
    </script>

    <script>
        function timerIncrement() {
            idleTime = idleTime + 1;
            if (idleTime > 10) { 
                window.location.reload();
            }
        }            
        var idleTime = 0;
        $(document).ready(function () {
            var idleInterval = setInterval(timerIncrement, 60000); 
            $(this).mousemove(function (e) { idleTime = 0; });
            $(this).keypress(function (e) { idleTime = 0; });
        });
    </script>

    <% 
    function getSentimentIcon(vote) {
        if(vote == 'positive' || vote == 'pos') return '<i class="fa-solid fa-face-smile text-green-600"></i>';
        if(vote == 'neutral' || vote == 'neg') return '<i class="fa-solid fa-face-meh text-gray-400"></i>';
        if(vote == 'negative' || vote == 'ang') return '<i class="fa-solid fa-face-frown text-orange-600"></i>';
        return '<i class="fa-regular fa-file-lines text-gray-400"></i>';
    }
    
    function getBiasColor(label) {
        var map = {
            'sx': 'bias-sx', 'left': 'bias-sx',
            'dx': 'bias-dx', 'right': 'bias-dx',
            'cx': 'bias-cx', 'center': 'bias-cx',
            'ind': 'bias-ind', 'finance': 'bias-ind'
        };
        return map[label] || 'bias-default';
    }
    %>
</head>

<body class="bg-paper-bg text-news-black font-sans antialiased selection:bg-accent-red selection:text-white">

    <div class="bg-gray-100 border-b border-gray-300 py-2 text-[10px] md:text-xs font-bold uppercase tracking-wider text-gray-600">
        <div class="max-w-screen-xl mx-auto px-4 flex flex-col md:flex-row justify-between items-center gap-2">
            <div class="flex items-center gap-3 w-full md:w-auto justify-center md:justify-start">
                <span class="text-gray-400 hidden md:inline">Orientamento:</span>
                <span class="flex items-center gap-1"><span class="block w-2 h-2 rounded-full bg-bias-sx"></span> SX</span>
                <span class="flex items-center gap-1"><span class="block w-2 h-2 rounded-full bg-bias-cx"></span> CX</span>
                <span class="flex items-center gap-1"><span class="block w-2 h-2 rounded-full bg-bias-dx"></span> DX</span>
                <span class="flex items-center gap-1"><span class="block w-2 h-2 rounded-full bg-bias-ind"></span> IND</span>
            </div>
            <div class="hidden md:block text-gray-500 font-normal normal-case">
                <%-moment().locale("it").format("LL [h]HH:mm")%> - agg. <%-moment(status.lastUpdate).locale("it").fromNow()%>
            </div>
            <div class="flex items-center gap-3 w-full md:w-auto justify-center md:justify-end">
                <span class="text-gray-400 hidden md:inline">Sentiment:</span>
                <span class="flex items-center gap-1"><i class="fa-solid fa-face-smile text-green-600"></i> Positivo</span>
                <span class="flex items-center gap-1"><i class="fa-solid fa-face-meh text-gray-400"></i> Neutrale</span>
                <span class="flex items-center gap-1"><i class="fa-solid fa-face-frown text-orange-400"></i> Negativo</span>
            </div>
        </div>
    </div>

    <header class="bg-white pt-8 pb-6 border-b-4 border-black text-center px-4">
        <a href="/" class="no-underline text-black">
            <h1 class="font-serif font-black text-5xl md:text-7xl uppercase tracking-tighter leading-none mb-2">
                Sfoglia la Notizia
            </h1>
        </a>
    </header>

    <div class="max-w-screen-xl mx-auto bg-white shadow-xl min-h-screen grid grid-cols-1 lg:grid-cols-12 mt-6">

        <main class="lg:col-span-12 p-6 md:p-10 border-r border-gray-200">

            <% 
            var visibleCount = 0;
            for(i in articles){
                var article = articles[i];
                if (!article.alreadyShown && article.position <= 10) {
                    
                    // Logica recupero immagine
                    var displayImage = null;
                    for(ii in article.images){
                        if(article.images[ii]) { displayImage = article.images[ii]; break; }
                    }
                    if(!displayImage && article.related) {
                        for(ii in article.related){
                            var relImg = corpus[article.related[ii].url].images;
                            var show = (article.confidence[article.related[ii].url] > minConf && article.related[ii].similarity >= minSim);
                            if (show && relImg && relImg != "") {
                                displayImage = relImg;
                                break;
                            }
                        }
                    }
            %>

            <article class="mb-12 border-b border-gray-200 pb-10 last:border-0" id="<%=article.url%>">
                
                <% if (visibleCount === 0) { %>
                    
                    <span class="bg-<%=getBiasColor(article.label)%> inline-block px-2 py-0.5 text-[10px] font-bold text-white uppercase tracking-widest mb-2 rounded-sm">
                        # <%=article.source%>
                    </span>

                    <h2 class="font-serif font-bold text-4xl md:text-5xl leading-tight mb-6 hover:text-accent-red transition-colors">
                        <a href="<%=article.url%>"><%=article.title%></a>
                    </h2>

                    <% if(displayImage) { %>
                    <div class="w-full mb-6 bg-gray-100 rounded-sm overflow-hidden">
                        <img src="<%=displayImage%>" class="w-full h-auto" alt="News Image">
                    </div>
                    <% } %>

                    <div class="text-lg text-gray-700 leading-relaxed mb-4">
                        <%-article.description%> 
                        <span class="block mt-1 text-xs text-gray-400 font-medium uppercase">
                            <%-moment(article.pubDate).locale("it").fromNow()%>&nbsp;&nbsp;<%- getSentimentIcon(article.sentiment.vote) %>
                            <!-- <%- getSentimentIcon(article.sentiment.vote) %>&nbsp;&nbsp;<%-moment(article.pubDate).locale("it").fromNow()%> -->
                        </span>
                    </div>

                <% } else { %>

                    <div class="flex flex-col md:flex-row gap-8 items-start">
                        
                        <% if(displayImage) { %>
                        <div class="w-full md:w-1/3 shrink-0">
                            <div class="w-full bg-gray-100 rounded-sm overflow-hidden">
                                <img src="<%=displayImage%>" class="w-full h-auto transition-transform duration-700 hover:opacity-90" alt="News Image">
                            </div>
                        </div>
                        <% } %>

                        <div class="flex-grow">
                            
                            <span class="bg-<%=getBiasColor(article.label)%> inline-block px-2 py-0.5 text-[10px] font-bold text-white uppercase tracking-widest mb-2 rounded-sm">
                                <%=article.source%>
                            </span>

                            <h2 class="font-serif font-bold text-2xl md:text-3xl leading-tight mb-3 hover:text-accent-red transition-colors">
                                <a href="<%=article.url%>"><%=article.title%></a>
                            </h2>

                            <div class="text-base text-gray-700 leading-relaxed mb-3">
                                <%-article.description%> 
                                <p>
                                <span class="block mt-1 text-[11px] text-gray-400 font-medium uppercase">
                                   <%-moment(article.pubDate).locale("it").fromNow()%>&nbsp;&nbsp;<%- getSentimentIcon(article.sentiment.vote) %>
                                </span>                                    
                                </p>
                            </div>
                        </div>
                    </div>

                <% } %>

                <% if (article.related && article.related.length > 0) { %>
                    <!-- <div class="flex flex-col gap-0 border-t border-gray-100 <%= (visibleCount === 0) ? 'mt-6' : 'mt-4 md:ml-[calc(33.333%+2rem)]' %> pt-2"> -->
                    <div class="flex flex-col gap-0 border-t border-gray-100 <%= (visibleCount === 0) ? 'mt-6' : 'mt-4' %> pt-2">
                        <% for(iii in article.related){
                            var related = article.related[iii];
                            if (article.confidence[related.url] > minConf && related.similarity >= minSim && iii > 0 ){
                                var relatedData = corpus[related.url];
                        %>
                        <div class="flex items-stretch py-3 border-b border-gray-100 group hover:bg-gray-50 transition-colors last:border-0">
                            <div class="w-1 bg-<%=getBiasColor(relatedData.label)%> mr-3 shrink-0"></div>
                            <div class="flex-grow pr-2">
                                <div class="flex justify-between items-center mb-1">
                                    <span class="text-[9px] font-bold text-<%=getBiasColor(relatedData.label)%> uppercase tracking-wider">
                                        [ <%=relatedData.source%> ]
                                    </span>
                                </div>
                                
                                <a href="<%=related.url%>" 
                                class="block text-sm font-medium leading-snug group-hover:text-accent-red"
                                title="<%=relatedData.description%>">
                                    <%=relatedData.title%>
                                </a>
                                    <div class="text-right text-[9px] text-gray-400 font-medium">
                                        <%-moment(relatedData.pubDate).locale("it").fromNow()%>
                                    </div>
                            </div>

                            <div class="flex items-center pl-2 border-l border-gray-100 w-10 justify-center shrink-0 text-base">
                                <%- getSentimentIcon(relatedData.sentiment.vote) %>
                            </div>
                        </div>
                        <% 
                            } 
                        } 
                        %>
                    </div>
                <% } %>

            </article>

            <% 
                visibleCount++; // Incremento contatore
                } // End if article main logic
            } // End main loop 
            %>

        </main>
    </div>
</body>
</html>